<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/remainder_bottom"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:behavior_peekHeight="40dp"
    android:background="@drawable/bg_bottom_sheet"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/remainder_bottom_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Change Theme"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:fontFamily="@font/averia_gruesa_libre"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:id="@+id/remainder_viewColor1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/remainder_bg"/>
            <ImageView
                android:id="@+id/remainder_imageColor1"
                android:layout_width="45dp"
                android:padding="10dp"
                android:layout_height="45dp"
                android:src="@drawable/doneicon"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:id="@+id/remainder_viewColor2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/remainder_bg2"/>
            <ImageView
                android:id="@+id/remainder_imageColor2"
                android:layout_width="45dp"
                android:padding="10dp"
                android:layout_height="45dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:id="@+id/remainfer_viewColor3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/remainder_bg3"/>
            <ImageView
                android:id="@+id/remainder_imageColor3"
                android:layout_width="45dp"
                android:padding="10dp"
                android:layout_height="45dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:id="@+id/remainder_viewColor4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/remainder_bg4"/>
            <ImageView
                android:id="@+id/remainder_imageColor4"
                android:layout_width="45dp"
                android:padding="10dp"
                android:layout_height="45dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:id="@+id/remainder_viewColor5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/remainder_bg5"/>
            <ImageView
                android:id="@+id/remainder_imageColor5"
                android:layout_width="45dp"
                android:padding="10dp"
                android:layout_height="45dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:id="@+id/remainder_viewColor6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/remainder_bg6"/>
            <ImageView
                android:id="@+id/remainder_imageColor6"
                android:layout_width="45dp"
                android:padding="10dp"
                android:layout_height="45dp"
                />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick color"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:fontFamily="@font/averia_gruesa_libre"/>
    </LinearLayout>

</LinearLayout>